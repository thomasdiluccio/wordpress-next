{
  "name": "thomasdiluccio/blog",
  "type": "project",
  "license": "MIT",
  "minimum-stability":"stable",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "authors": [
    {
      "name": "Thomas di Luccio",
      "email": "thomas@zenhysteria.fr"
    }
  ],
  "require": {
    "johnpbloch/wordpress-core-installer": "^2.0",
    "johnpbloch/wordpress-core": "^6.3",
    "wpackagist-theme/lemmony": "^1.4",
    "wpackagist-plugin/lemmony-companion": "^1.2",
    "wpackagist-plugin/jetpack": "^12.7",
    "wpackagist-plugin/wordpress-seo": "^21.3",
    "wpackagist-plugin/w3-total-cache": "^2.5.0",
    "vlucas/phpdotenv": "^5.5"
  },
  "autoload": {
    "files": [
      "src/helper.php"
    ]
  },
  "scripts": {
    "setup-dotenv-file": [
      "cp -n ./wordpress/.env.default ./wordpress/.env  2>/dev/null || :"
    ],
    "auto-scripts": {},
    "post-install-cmd": [
      "@auto-scripts",
      "composer setup-dotenv-file"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ],
    "post-create-project-cmd": [
      "git init"
    ]
  },
  "extra": {
    "wordpress-install-dir": "wordpress",
    "installer-paths": {
      "wordpress/wp-content/plugins/{$name}": [
        "type:wordpress-plugin"
      ],
      "wordpress/wp-content/themes/{$name}": [
        "type:wordpress-theme"
      ]
    }
  },
  "config": {
    "allow-plugins": {
      "johnpbloch/wordpress-core-installer": true,
      "composer/installers": true
    },
    "optimize-autoloader":true
  },
  "require-dev": {
    "szepeviktor/phpstan-wordpress": "^1.3",
    "laravel/pint": "^1.10"
  }
}
